
@{
    ViewData["Title"] = "AdminList";
}

@model BoardGameViewModel

<div class="container mt-3">
    <h2>Manage board games</h2>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Publisher</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (var Index = 0; Index < Model.BoardGames.Count; ++Index)
            {
                <tr>
                    <th scope="row">@(Index + 1)</th>
                    <td>@Model.BoardGames[Index].Name</td>
                    <td>@Model.BoardGames[Index].Publisher</td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="BoardGames" asp-action="Edit" asp-route-id="@Model.BoardGames[Index].Id" role="button">Edit</a>
                        <a class="btn btn-info" asp-area="" asp-controller="BoardGames" asp-action="Item" asp-route-id="@Model.BoardGames[Index].Id" role="button">View Item</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>