@model IEnumerable<TeamAssignment.Models.Order>

@{
    ViewData["Title"] = "History";
}

<div class="container mt-3">
    <h2>History</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sent to</th>
                <th scope="col">Address</th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zip)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiftWrap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shipped)
                </th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Line1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiftWrap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shipped)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchases.CartTotal)
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>

